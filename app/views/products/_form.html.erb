    <%= f.text_area :description, class:"form-control", type:"text", placeholder:"Description", id:"example-text-input" %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url, class:"form-control", type:"url", placeholder:"Pic Link", id:"example-text-input" %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
