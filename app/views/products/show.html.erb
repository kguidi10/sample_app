<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <div class="thumbnail">

  
        <%= 
        if (@product.image_url)
         image_tag(@product.image_url, class: "img-responsive product", height: '350', width: '350') 
        end
         %>

        <div class="caption">
          <h4 style="font-family: 'Indie Flower', cursive;">
            <strong>Name:</strong><br>
          </h4>
          <p style="font-family: Lora;"> 
            <%= @product.name %>
          </p>
          
        <h4 style="font-family:  'Indie Flower', cursive;">
          <strong>Description:</strong>
        </h4>
        
        <p style="font-family: Lora">
          <%= @product.description %>
        </p>

        <h4 style="font-family: 'Indie Flower', cursive;">
         <strong>Price:</strong>
        </h4>
        <p style="font-family: Lora">
         <%= @product.price %>
        </p>
        <h4 style="font-family: 'Indie Flower', cursive;"><strong>Rating:</strong><%= @product.highest_rating_comment %></h4>

        <%= render 'new_comment' %>
        <%= render 'comments' %>

        </div>
      </div>
    </div>
  </div


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
   
  



